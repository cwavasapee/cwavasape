{
  "name": "@cwavasape/doom-scroller",
  "type": "module",
  "repository": {
    "url": "https://github.com/cwavasapee/cwavasape/tree/main/packages/doom-scroller"
  },
  "license": "MIT",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify",
    "lint": "tsc",
    "prepare": "playwright install",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "playwright test",
    "test:integration:debug": "playwright test --debug",
    "test:integration:ui": "playwright test --ui",
    "serve-test": "vite tests --port 3000"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.8.1",
    "@vitest/coverage-v8": "^2.1.3",
    "jsdom": "^25.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.3"
  }
}
